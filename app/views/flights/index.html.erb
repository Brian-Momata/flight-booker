<%= form_for :flight, method: :get do |f| %>
  <%= label_tag(:departure_code, "Departure Airport:") %>
  <%= select_tag(:departure_code, options_for_select(@departure_airports)) %><br>
  <%= label_tag(:arrival_code, "Arrival Airport:")%>
  <%= select_tag(:arrival_code, options_for_select(@arrival_airports)) %><br>
  <%= label_tag(:num_tickets, "Number of Passengers") %>
  <%= select_tag(:num_tickets, options_for_select((1..4).to_a)) %><br>
  <%= select_tag(:date, options_for_select(Airport.departure_times)) %>
<% end %>